{
  "name": "eggd_vcf_qc_v1.0.0",
  "title": "eggd_vcf_qc_v1.0.0",
  "summary": "Simple QC of a vcf file. Includes deviation from expected allelic balance",
  "tags":["NGS QC"],
  "properties": {
    "githubRelease": "v1.0.0"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "Input VCF file",
      "help": "A VCF file containing variants to be evaluated",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf"]
    },
    {
      "name": "bed_file",
      "label": "Input bed file",
      "help": "A bed file containing the regions to be evaluated in the vcf file",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"]
    }
  ],
  "outputSpec": [
    {
      "name": "output_file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": "A tab delimited vcf.QC file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "execDepends": [
      {"name": "pysam",
       "package_manager": "pip",
       "version": "0.12.0"},
      {"name": "bedtools",
       "package_manager": "apt"
     }
     ],
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/dnanexus_vcf_QC.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
